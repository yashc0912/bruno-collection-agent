# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf

# Web files
*.html text eol=lf
*.css text eol=lf

# Documentation
*.txt text eol=lf
LICENSE text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary

# Export ignore
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
test-results/ export-ignore
playwright-report/ export-ignore
